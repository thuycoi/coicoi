<p id="notice"><%= notice %></p>

<h1>Words</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Definition</th>
      <th>Note</th>
      <th>Language</th>
      <th>Wordclass</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= link_to word.body , word %></td>
        <td><%= word.definition %></td>
        <td><%= word.note %></td>
        <td><%= word.language.name %></td>
        <td><%= word.wordclass.name %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

