<h1>Advanced Search </h1>

<%= form_for @search do |f| %>
  <div class="field">
    <%= f.label :keywords %>
    <%= f.text_field :keywords %>
  </div>

  <div class="field">
    <%= f.label :wordclass_id %>
    <%= f.collection_select :wordclass_id, Wordclass.order(:name), :id, :name, include_blank: true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
